{
  "name": "angular-browser-i18n",
  "version": "1.0.0",
  "description": "AngularJS directives for utilizing native internationalization (i18n) functionality within browser extensions",
  "main": "index.js",
  "scripts": {
    "build": "mkdirp dist && npm-run-all --parallel build:*",
    "build:copy": "ncp src/directive.js dist/angular-browser-i18n.js",
    "build:compress": "uglifyjs src/directive.js --compress --mangle toplevel --comments --output dist/angular-browser-i18n.min.js",
    "test": "npm-run-all --serial test:copy test:lint test:run:firefox",
    "test:copy": "npm-run-all --parallel test:copy:*",
    "test:copy:directive": "ncp dist/angular-browser-i18n.min.js test/extension/angular-browser-i18n.min.js",
    "test:copy:vendor": "mkdirp test/extension/vendor && ncp node_modules/angular/angular.min.js test/extension/vendor/angular.min.js",
    "test:lint": "web-ext lint --source-dir=test/extension",
    "test:run:firefox": "web-ext run --source-dir=test/extension",
    "watch": "npm-run-all --parallel watch:*",
    "watch:build": "watch \"npm run build\" src",
    "watch:test": "mkdirp dist && watch \"npm run test:copy:directive\" dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rthaut/angular-browser-i18n.git"
  },
  "keywords": [
    "angular",
    "angularjs",
    "browser",
    "extension",
    "internationalization",
    "i18n",
    "getmessage",
    "chrome"
  ],
  "author": "Ryan Thaut <rthaut@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rthaut/angular-browser-i18n/issues"
  },
  "homepage": "https://github.com/rthaut/angular-browser-i18n#readme",
  "devDependencies": {
    "angular": "^1.7.2",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "node-minify": "^3.1.0",
    "npm-run-all": "^4.1.3",
    "uglify-js": "^3.4.4",
    "watch": "^1.0.2",
    "web-ext": "^2.7.0"
  }
}
